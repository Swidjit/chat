
:css
  #speechActivity {
      position: absolute;
      width: 30px;
  }

  #networkActivity {
      position: absolute;
      width: 30px;
      top: 40px;
  }

  .hidden {
      display: none;
  }
  .choice:hover {
    background: blue;
    color: white;
  }

  .chunk {
    margin: 3px 5px;
    background-color: #eee;
    padding: 4px 6px;
    display: inline;
  }

  #chatbox {
    text-align: right;
  }
  #comment, #chat {
    display:inline;
    font-size: 1.2em;
    text-align: left;
  }
  #output {
    font-size: 1.2em;
  }

  #stopBtn {
    display:none;
  }
  #stopBtn, #startBtn {
    margin-top: 10px;
  }
  #message {
    color:red;
  }


%img#speechActivity.hidden{:src => "waiting.gif"}/
%img#networkActivity.hidden{:src => "radio.gif"}/
%ul#wavFiles
#chatbox
  #comment
  %input#chat{:type=>'text', :placeholder => 'talk', :style => "width:300px; height: 40px; font-size: 1.2em;"}
    #search-result
  %button#startBtn{:onclick => "start()"}
    =image_tag 'mic.png'
  %button#stopBtn{:onclick => "stop()"}
    off

